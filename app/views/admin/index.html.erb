<div class="box" id="messages">
<h2>Messages</h2>
<h3>Report from users.</h3>
<div>未処理件数：<%= link_to "#{@unresolves.count}件", reports_path %></div>

<% @messages.each do |message| -%>
<h3><%= message[:name] %></h3>

<table>
<tr><th> </th><th>最新</th><th>前回</th></tr>
<tr>
<th>開始</th>
<td><%= message[:recent][:start].strftime('%Y/%m/%d %H:%M:%S') %></td>
<td><%= message[:previous][:start].strftime('%Y/%m/%d %H:%M:%S') %></td>
</tr>
<tr>
<th>終了</th>
<td><%= message[:recent][:end].strftime('%Y/%m/%d %H:%M:%S') %></td>
<td><%= message[:previous][:end].strftime('%Y/%m/%d %H:%M:%S') %></td>
</tr>
</table>

<table>
<tr><th>Message</th><th>詳細</th><th>回数</th></tr>
<% message[:messages].each do |key, value| -%>
<tr>
<td><%= value[:message] %></td>
<td><%= value[:detail].first %><%if value[:count] > 1 %><detail><%= link_to 'more...', admin_messages_path(message[:_target], key) %></detail><% end %></td>
<td class="number"><%= value[:count] %></td>
</tr>
<% end -%>
</table>

<% end -%>
</div>
