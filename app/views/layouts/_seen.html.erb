<% items.each do |seen| -%>
<%= link_to movie_seens_path(:movie_id => seen.movie.id) do -%>

<h3><% unless seen.wish? %><%= image_tag stars(seen.evaluation), :alt => seen.evaluation_alt %><% end %><%= seen.movie.name_of_japan %></h3>
<% unless seen.wish? -%>
<p><%= seen.date.strftime('%Y/%m/%d') %>&nbsp;<%= seen.acondition_tag.name %></p>
<% end -%>

<p><%= truncate(seen.movie.outline, :length => 56) %></p>

<p class="actions<% if seen.comment.blank? %> finish<% end %>">
<%= linksym.html_safe %><span>見た<% if 0 < seen.movie.seen_users.count %>(<%= seen.movie.seen_users.count %>)<% end %></span>
<%= linksym.html_safe %><span>見たい<% if 0 < seen.movie.wish_users.count %>(<%= seen.movie.wish_users.count %>)<% end %></span>
</p>

<% unless seen.comment.blank? -%>
<%= simple_format seen.comment, :class => 'comment finish' -%>
<% end -%>

<% end -%>
<% end %>
