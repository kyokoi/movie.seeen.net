<%= link_to movie_seens_path movie do -%>
<h3><%= movie.name_of_japan %><% if movie.stars.count > 0 %><%= image_tag('layout/stars_on.png') %><span>(<%= movie.stars.count %>)</span><% end %></h3>
<p><%= truncate(movie.outline, :length => 56) %></p>
<% end -%>

<p class="actions">
<%= link_to "/movie/#{movie.id}/seens/new" do %><%= linksym.html_safe %><span>見た<% if movie.seen_users.count > 0 %>(<%= movie.seen_users.count %>)<% end %></span><% end %>
<%= link_to movie_wish_new_path movie.id do %><%= linksym.html_safe %><span>見たい<% if movie.wish_users.count > 0 %>(<%= movie.wish_users.count %>)<% end %></span><% end %>
</p>

<p class="activity finish">
<% movie.seen_users.group(:author_id).each do |seen| -%>
<%= link_to my_summary_path seen.author_id do -%>
<span><%= image_tag(path_by_author(seen.author.image, @author), :size => '32x32') %></span>
<% end -%>
<% end -%>
</p>

